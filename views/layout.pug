    script(src="/javascripts/client.js")

  body

    #navigationBar
      #logoContainer
        a(href='/')
          img#logoImg(alt='brand', src='../images/creepyBook.jpg', style='margin-top:-2em')
      div(style='display:inline-block')
        #appNameMarginTop
        div
          a#appName(href='/') Booky
      form#searchBarContainer(action='/search', mathod='get')
        input#searchBar(type='text', name='q', placeholder='Search by Title or Author')
        button#submitSearchBtn(type='submit') Submit
      #linkContainer
        a#link2.navLinks(href='/books/new') Add Book
        a#link1.navLinks(href='/books') Booklist




    block content
